<h1>Tasks</h1>

<ul>
    <% @tasks.each do |task| %>
        <li>
            <%= task.title %> - <%= task.description %>
            <%= link_to 'show', task_path(task) %>
            <%= link_to 'edit', edit_task_path(task) %>
            <%= link_to 'destroy', task, method: 'delete', data: {confirm: 'Are you sure that you want to delete this?'} %>
        </li>
    <% end %>
</ul>

<%= link_to 'New Task', new_task_path %>